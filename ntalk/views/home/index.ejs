<% include ../header %>
    <body>
        <div class="container">
          <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
              <div class="card card-signin my-5">
                <div class="card-body align-items-center">                  
                  <h1 class="card-title text-center font-weight-bold">Ntalk</h1>
                  <form class="form-signin" action="/entrar" method="post">
                    <div class="form-label-group">
                      <input type="text" name="nome" id="inputNome" class="form-control" placeholder="Entre com seu Nome" required autofocus>                      
                    </div>
                    <br>
                    
                    <div class="form-label-group mt-10">
                      <input type="email" name="email" id="inputEmail" class="form-control" placeholder="E-mail" required>                      
                    </div>
                    <br>      
                    
                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                    <hr class="my-4">                    
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </body>
</html>